{% extends "layout.njk" %}

{% block content %}
<h1>Platforms</h1>

<div class="row row-cols-auto">
  {% for pl in platforms %}  
  <div class="col">
    <div class="shadow-lg p-3 mb-5 bg-body rounded">
  <div class="card text-center" style="width: 18rem;">
    <img src="http:{{pl.platform_logo_url}}" class="card-img-center" alt="{{pl.name}}">
    <div class="card-body">
      <a href="/platforms/{{pl.slug}}/" class="btn btn-dark">See more</a>
    </div>
  </div>
  </div>
  </div> 
{% endfor %}
</div>
  {% endblock %}